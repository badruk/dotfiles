# List in long format, include dotfiles
alias la="ls -la"

# Go to real dir (i.e. if current dir is linked)
alias cd.="cd $(readlink -f .)"
alias mkdir="mkdir -pv"

# Prevent spamming cd ..
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# QoL e rimanenze di OSx
